<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".Activity.ProfileActivity">

    <include
        android:id="@+id/include6"
        layout="@layout/app_bar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/iransans"
                android:singleLine="false"
                android:text="لطفا فرم زیر را تکمیل نمائید"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextProfile1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:focusable="auto"
                android:fontFamily="@font/yekan"
                android:hint="نام"
                android:inputType="textPersonName"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="نام خانوادگی"
                android:inputType="textPersonName"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="کد ملی"
                android:inputType="number"
                android:maxLength="10"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextProfile4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/background_edittext"
                    android:clickable="true"
                    android:editable="true"
                    android:ems="10"
                    android:fontFamily="@font/yekan"
                    android:hint="سال تولد"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="7dp"
                    android:textColorHint="#706f6f"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scrollView2" />

                <EditText
                    android:id="@+id/editTextProfile11"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/background_edittext"
                    android:clickable="true"
                    android:editable="true"
                    android:ems="10"
                    android:fontFamily="@font/yekan"
                    android:hint="ماه"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="7dp"
                    android:textAlignment="center"
                    android:textColorHint="#706f6f"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scrollView2" />

                <EditText
                    android:id="@+id/editTextProfile10"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/background_edittext"
                    android:clickable="true"
                    android:editable="true"
                    android:ems="10"
                    android:fontFamily="@font/yekan"
                    android:hint="روز"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="7dp"
                    android:textAlignment="center"
                    android:textColorHint="#706f6f"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextProfile5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="شماره شناسنامه"
                android:inputType="number"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="آدرس"
                android:inputType="textPersonName"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="کد پستی"
                android:inputType="number"
                android:maxLength="10"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="تلفن ثابت"
                android:inputType="number"
                android:maxLength="11"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <EditText
                android:id="@+id/editTextProfile9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_edittext"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:fontFamily="@font/yekan"
                android:hint="تلفن همراه"
                android:inputType="number"
                android:maxLength="11"
                android:padding="7dp"
                android:textColorHint="#706f6f"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/yekan"
                android:text="ادامه"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>