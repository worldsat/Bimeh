<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@mipmap/background"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity">

    <include
        android:id="@+id/include7"
        layout="@layout/app_bar2" />

    <EditText
        android:id="@+id/editTextSign1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:fontFamily="@font/yekan"
        android:hint="کد ملی"
        android:inputType="number"
        android:maxLength="10"
        android:padding="10dp"
        android:textColorHint="#706f6f"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSign3" />

    <EditText
        android:id="@+id/editTextSign2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:fontFamily="@font/yekan"
        android:hint="تلفن همراه"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp"
        android:textColorHint="#706f6f"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextSign1"
        app:layout_constraintStart_toStartOf="@+id/editTextSign1"
        app:layout_constraintTop_toBottomOf="@+id/editTextSign1" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/yekan"
        android:text="ثبت نام"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSign3"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextSign3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:fontFamily="@font/yekan"
        android:hint="کد ملی معرف"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp"
        android:textColorHint="#706f6f"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextSign2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSign2"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarSignUp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/signBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSign2" />

</android.support.constraint.ConstraintLayout>